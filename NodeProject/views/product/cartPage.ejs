    <% include ./../tips/subs/meta %>
    <!-- CSS tag -->
    <link
      rel="stylesheet"
      type="text/css"
      href="/api/css/pcss/line-awesome-1.3.0/css/line-awesome.min.css"
    />
    <!-- <link rel="stylesheet" href="/public/style/style.css" /> -->
    <link rel="stylesheet" href="/api/css/pcss/cartPage/style.css" />
    <link rel="stylesheet" href="/share/select2/select2.min.css" />
    <link

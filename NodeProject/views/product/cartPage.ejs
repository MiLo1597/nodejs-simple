    <link rel="shortcut icon" href="/favicon/favicon.ico" type="image/x-icon" />
    <link rel="icon" href="/favicon/favicon.ico" type="image/x-icon" />
  </head>
  <body>
    <header class="text-gray-600 body-font">
      <div
        class="container mx-auto flex flex-wrap p-5 flex-col md:flex-row items-center"
      >
        <nav
          class="flex lg:w-2/5 flex-wrap items-center text-base md:ml-auto"
        ></nav>
        <a
          class="flex order-first lg:order-none lg:w-1/5 title-font font-medium items-center text-gray-900 lg:items-center lg:justify-center mb-4 md:mb-0"
        >
          <img
            src="/favicon/logo-icon-w-year-hr.png"
            width="150"
            height="150"
          />
        </a>
        <div class="lg:w-2/5 inline-flex lg:justify-end ml-5 lg:ml-0"></div>
      </div>
    </header>
    <div class="flex px-4 py-8 space-x-8" style="height: 1000px">
      <div class="w-2/3 bg-red-400 h-full w-full">
        <div
          class="flex justify-between items-center w-full border-y border-gray-400 bg-white p-4"
        >
          <span>
            <picture>
              <img
                style="width: 120px; height: 120px; object-fit: cover"
                class=""
                onerror="this.onerror=null; this.src='/api/docs/trash/image-not-found.png'"
                src="/api/docs/trash/image-not-found.png"
              />
            </picture>
          </span>
          <span
            class="text-white font-bold text-3xl border border-transparnet p-2 bg-rose-400 rounded-md"
          >
            Title Category</span
          >
          <span class="text-2xl">$0 - $100</span>
        </div>
        <!-- button add more -->
      </div>
      <div class="w-1/3 bg-green-400 h-full w-full p-4 space-y-4 rounded-3xl">
        <div class="text-center text-3xl font-bold py-4">Checkout</div>
        <div class="space-y-2">
          <span class="font-bold text-lg">Address</span>
          <div class="flex flex-col bg-teal-400 rounded-xl p-4 text-white">
            <span>Adam Johnson</span>
            <span>403 Oakland Ave Street, A city, Florida, 32104,</span>
            <span>United States of America </span>
          </div>
        </div>
        <div class="space-y-4">
          <span class="font-bold text-lg">Payment method</span>
          <div class="flex flex-col">
            <div
              class="flex bg-white rounded-md justify-between items-center p-4 transition-all hover:translate-x-1 hover:-translate-y-2"
            >
              <label class="flex gap-2.5 w-full" for="paypal">
                <img
                  src="/favicon/paypal.svg"
                  width="25"
                  height="25"
                />Paypal</label
              >
              <input
                id="paypal"
                type="radio"
                name="payment_method"
                value="paypal"
              />
            </div>
          </div>
          <div class="flex flex-col">
            <div
              class="flex bg-white rounded-md justify-between items-center p-4 transition-all hover:translate-x-1 hover:-translate-y-2"
            >
              <label class="flex gap-2.5 w-full" for="momo">
                <img
                  src="/favicon/momo.svg"
                  width="25"
                  height="25"
                />Momo</label
              >
              <input
                id="momo"
                type="radio"
                name="payment_method"
                value="momo"
              />
            </div>
          </div>
          <div class="flex flex-col">
            <div
              class="flex bg-white rounded-md justify-between items-center p-4 transition-all hover:translate-x-1 hover:-translate-y-2"
            >
              <label class="flex gap-2.5 w-full" for="cod">
                <img src="/favicon/cod.svg" width="25" height="25" />COD</label
              >
              <input id="cod" type="radio" name="payment_method" value="cod" />
            </div>
          </div>
        </div>
        <div class="space-y-2">
          <span class="font-bold text-lg">Shopping bill</span>
          <table class="w-full">
            <tbody class="space-y-2">
              <tr>
                <td class="px-2">Pack</td>
                <td class="px-2" align="right">0</td>
              </tr>
              <tr>
                <td class="px-2">Quantity</td>
                <td class="px-2" align="right">0</td>
              </tr>
              <tr>
                <td class="px-2">Sub total</td>
                <td class="px-2" align="right">$0</td>
              </tr>
              <tr>
                <td class="px-2">Shipping & handling</td>
                <td class="px-2" align="right">$0</td>
              </tr>
              <tr>
                <td class="px-2">Estimated Tax:</td>
                <td class="px-2" align="right">$0</td>
              </tr>
              <tr>
                <td class="px-2">Discount</td>
                <td class="px-2" align="right">-$0</td>
              </tr>
            </tbody>
            <tfoot class="border-t border-red-400">
              <tr class="font-bold text-xl">
                <td class="px-2">Total</td>
                <td class="px-2" align="right">$88.36</td>
              </tr>
            </tfoot>
          </table>
        </div>
        <button class="flex w-full justify-center">Buy now</button>
      </div>
    </div>
